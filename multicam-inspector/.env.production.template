# Production Environment Configuration
# Copy this to .env on your production server and fill in the values

# Server Configuration
NODE_ENV=production
PORT=5001

# Frontend URL (change to your domain)
REACT_APP_API_HOST=http://your-server-ip:5001

# JWT Secret (generate a strong random string)
JWT_SECRET=your-very-long-random-string-here

# Session Configuration
SESSION_SECRET=another-very-long-random-string-here

# Camera Stream Configuration (if applicable)
CAMERA_STREAM_BASE_URL=http://your-camera-server-ip

# CORS Settings (add your frontend domain)
ALLOWED_ORIGINS=http://your-server-ip:5001,http://your-domain.com

# File Upload Settings
MAX_FILE_SIZE=100MB
UPLOAD_DIRECTORY=/home/your-username/multicam-inspector/data/sessions

# Logging
LOG_LEVEL=info
LOG_FILE=/home/your-username/multicam-inspector/logs/app.log