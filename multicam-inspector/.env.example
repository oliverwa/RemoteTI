# Example Environment Configuration
# Copy this file to .env and replace with real values

NODE_ENV=production
PORT=5001

# Security - Generate strong random strings
JWT_SECRET=GENERATE_WITH_openssl_rand_-base64_32
SESSION_SECRET=GENERATE_WITH_openssl_rand_-base64_32

# Hangar System Credentials (for lights control)
# Get the real password from secure storage
HANGAR_SYSTEM_USERNAME=system
HANGAR_SYSTEM_PASSWORD=REPLACE_WITH_REAL_PASSWORD

# Camera Credentials
# Get the real password from secure storage
CAMERA_USERNAME=admin
CAMERA_PASSWORD=REPLACE_WITH_REAL_PASSWORD
CAMERA_ADMIN_USERNAME=admin
CAMERA_ADMIN_PASSWORD=REPLACE_WITH_REAL_PASSWORD

# Optional settings
BCRYPT_ROUNDS=10
REQUIRE_AUTH=true
LOG_LEVEL=info
