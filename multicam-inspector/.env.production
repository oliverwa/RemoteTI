# Production Environment Configuration
NODE_ENV=production
PORT=5001

# API Configuration - Leave empty to auto-detect from browser location
# REACT_APP_API_HOST=http://your-server-ip:5001

# Security - IMPORTANT: Generate strong random strings for these
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARS
SESSION_SECRET=CHANGE_THIS_TO_DIFFERENT_RANDOM_STRING_32_CHARS

# File paths
UPLOAD_DIRECTORY=./data/sessions

# Logging
LOG_LEVEL=info

# Hangar System Credentials - MUST CHANGE THESE IN PRODUCTION!
HANGAR_SYSTEM_USERNAME=CHANGE_THIS_USERNAME
HANGAR_SYSTEM_PASSWORD=CHANGE_THIS_PASSWORD_USE_STRONG_RANDOM

# Camera Credentials - MUST CHANGE THESE IN PRODUCTION!
CAMERA_ADMIN_USERNAME=CHANGE_THIS_USERNAME
CAMERA_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD_USE_STRONG_RANDOM